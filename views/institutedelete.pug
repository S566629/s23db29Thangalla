extends layout

block content
  h1= title
  if (toShow == null)
    h2 No instance to delete
  else
    - let instituteid = toShow._id
    - let Name = toShow.Name
    - let Size = toShow.Size
    - let year = toShow.year
    - let actionid = "/resource/institute/" + instituteid

    script.
      let actionid = "#{actionid}"

    div
      div.row
        div(class='instituteAttr mr-3') institute ID is:
          div #{instituteid}
      div.row
        div(class='instituteAttr mr-3') Name is:
          div #{Name}
      div.row
        div(class='instituteAttr mr-3') Size is:
          div #{Size}
      div.row
        div(class='instituteAttr mr-3') year is:
          div #{year}
      button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

    script.
      function cancel() {
        // Go back to the home page for the costume collection
        window.location.href='/costumes';
      }

      function deleteOnid() {
        console.log("starting delete");
        // delete first
        fetch(actionid, {
          method: 'DELETE' // Don't need a body for the delete
        }).then((resp) => {
          return resp.json(); // or resp.text() or whatever the server sends
        }).then((body) => {
          alert("Delete succeeded");
          window.location.href='/institute';
          // TODO handle body
        }).catch((error) => {
          // TODO handle error
          alert("Delete failed " + error );
        });
      }
